<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="75"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_iconChange1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="16dp"
            android:layout_weight="10"
            android:gravity="right"
            android:src="@drawable/stock" />

        <TextView
            android:id="@+id/tv_ChangeIndice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="20"
            android:gravity="center_horizontal|center"
            android:hint="Change Indice" />

        <TextView
            android:id="@+id/tv_LastIndexIndice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="15"
            android:gravity="center_vertical|center"
            android:hint="Last Index" />

        <TextView
            android:id="@+id/tv_nameIndice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_weight="30"
            android:gravity="center"
            android:hint="name"
            android:textSize="20dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_date1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="Date"
        android:paddingBottom="4dp"
        />

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/bt_Gragh"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="goToGraph"
            android:text="גרף" />

    </LinearLayout>

</LinearLayout>
    
